source ~/.base.vimrc

set hidden
set encoding=utf-8

set ignorecase
set incsearch
set showtabline=0
set wildmenu
set wildignore=*.class,*.jar,*/target/,.git/,*.o,*.md,bin,/,**target/**
set path+=**
set shell=/bin/bash\ -i
set wildignorecase
set autoindent
set expandtab
set shiftwidth=2
set softtabstop=2
set showtabline=2

""" solarized vim
syntax enable
let g:solarized_termtrans=1
let g:solarized_termcolor=256
let g:solarized_visibility="high"
set background=dark
colorscheme solarized
""" solarized vim end

""" fzf.vim
set rtp+=~/.fzf
nnoremap <C-p> :FZF<CR>
nnoremap <C-b> :Buffers<CR>
"""

""" ctrl-p
"let g:ctrlp_clear_cache_on_exit = 0

